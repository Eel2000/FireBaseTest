@model Student
@{
}

<div class="container">
    <h3 class="text-center font-weight-bold">Update Student Informations</h3>
    <hr />
    <div class="card shadow-lg">
        <h5 class="text-center font-weight-bold mt-3">Student informations</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert-primary" })
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Firstname"></label>
                    <input type="text" class="form-control" asp-for="Firstname" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Lastname"></label>
                    <input type="text" class="form-control" asp-for="Lastname" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Grade"></label>
                    <input type="text" class="form-control" asp-for="Grade" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Age"></label>
                    <input type="text" class="form-control" asp-for="Age" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="OriginSchool"></label>
                    <input type="text" class="form-control" asp-for="OriginSchool" />
                </div>
                <div class="d-inline">
                    <input type="submit" class="btn btn-success" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>
